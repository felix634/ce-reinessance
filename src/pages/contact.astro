---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact CE Reinessance - Inquiry and Consultation">
    <h1 class="text-4xl font-bold mb-4 text-center">Contact <span class="text-white">Us</span></h1>
    <p class="text-xl text-gray-400 text-center mb-12 max-w-3xl mx-auto">
        Reach out to our specialist team to discuss your luxury renovation project in Central Europe. We will respond within one business day.
    </p>

    <div class="grid lg:grid-cols-3 gap-12 bg-primary-dark p-10 rounded-xl shadow-2xl">
        <div class="lg:col-span-1 space-y-8">
            <h2 class="text-3xl font-bold text-accent-gold">Our Hub</h2>
            <div class="space-y-4 text-gray-300">
                <p>
                    CE Reinessance Kft.<br>
                    Budapest, Hungary (Central European Operations Hub)
                </p>
                <p>
                    Email: <br>
                    <a href="mailto:project-inquiry@cereinessance.com" class="hover:text-accent-gold transition duration-300">project-inquiry@cereinessance.com</a>
                </p>
                <p>
                    Phone (Hungary): <br>
                    +36 1 555 1234
                </p>
            </div>
            <div class="text-sm text-gray-500 pt-4 border-t border-gray-700">
                <p>We serve: Hungary, Austria, Czechia, Poland.</p>
            </div>
        </div>

        <form 
            name="contact" 
            method="POST" 
            data-netlify="true" 
            action="/success" 
            class="lg:col-span-2 space-y-6"
        >
            <input type="hidden" name="form-name" value="contact" />

            <div class="grid sm:grid-cols-2 gap-6">
                <label class="block">
                    <span class="text-gray-200">Full Name *</span>
                    <input 
                        type="text" 
                        name="name" 
                        required 
                        class="mt-1 block w-full bg-background-dark border border-gray-600 rounded-md shadow-sm p-3 text-white focus:border-accent-gold focus:ring focus:ring-accent-gold/50 transition duration-300"
                    />
                </label>
                <label class="block">
                    <span class="text-gray-200">Email Address *</span>
                    <input 
                        type="email" 
                        name="email" 
                        required 
                        class="mt-1 block w-full bg-background-dark border border-gray-600 rounded-md shadow-sm p-3 text-white focus:border-accent-gold focus:ring focus:ring-accent-gold/50 transition duration-300"
                    />
                </label>
            </div>

            <div class="grid sm:grid-cols-2 gap-6">
                <label class="block">
                    <span class="text-gray-200">Project Location (City, Country) *</span>
                    <input 
                        type="text" 
                        name="location" 
                        required 
                        class="mt-1 block w-full bg-background-dark border border-gray-600 rounded-md shadow-sm p-3 text-white focus:border-accent-gold focus:ring focus:ring-accent-gold/50 transition duration-300"
                    />
                </label>
                <label class="block">
                    <span class="text-gray-200">Project Type *</span>
                    <select 
                        name="project-type" 
                        required 
                        class="mt-1 block w-full bg-background-dark border border-gray-600 rounded-md shadow-sm p-3 text-white focus:border-accent-gold focus:ring focus:ring-accent-gold/50 transition duration-300 appearance-none"
                    >
                        <option value="" disabled selected>Select an option</option>
                        <option value="heritage">Heritage Restoration</option>
                        <option value="luxury_modernization">Luxury Modernization</option>
                        <option value="pm">Project Management Only</option>
                        <option value="other">Other Inquiry</option>
                    </select>
                </label>
            </div>

            <label class="block">
                <span class="text-gray-200">Your Message *</span>
                <textarea 
                    name="message" 
                    rows="4" 
                    required 
                    class="mt-1 block w-full bg-background-dark border border-gray-600 rounded-md shadow-sm p-3 text-white focus:border-accent-gold focus:ring focus:ring-accent-gold/50 transition duration-300"
                ></textarea>
            </label>

            <button 
                type="submit" 
                class="w-full px-4 py-3 text-lg font-semibold text-background-dark bg-accent-gold rounded-md shadow-xl hover:bg-white transition duration-500 transform hover:scale-[1.01]"
            >
                Send Inquiry
            </button>
        </form>
    </div>
</Layout>