---
import Layout from '../layouts/Layout.astro';
import AnimateOnScroll from '../components/AnimateOnScroll.astro'; // NEW IMPORT
---

<Layout title="Luxury Home & Heritage Renovation in Central Europe">
    <AnimateOnScroll animation="fade-up">
        <section class="grid md:grid-cols-3 gap-8 mb-20">
            </section>
    </AnimateOnScroll>
    
    <AnimateOnScroll animation="fade-right">
        <section class="mb-20 py-16 bg-primary-dark rounded-xl shadow-2xl">
            </section>
    </AnimateOnScroll>

    <AnimateOnScroll animation="zoom-in">
        <section class="py-16 text-center">
            </section>
    </AnimateOnScroll>

    <section class="mb-20 py-16">
        <AnimateOnScroll animation="fade-up">
            <h2 class="text-4xl font-bold text-center mb-12">Our 4-Step <span class="text-white">Renaissance Process</span></h2>
        </AnimateOnScroll>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <AnimateOnScroll animation="fade-up" delay={100}><div class="p-6 bg-primary-dark ...">...</div></AnimateOnScroll>
            <AnimateOnScroll animation="fade-up" delay={200}><div class="p-6 bg-primary-dark ...">...</div></AnimateOnScroll>
            <AnimateOnScroll animation="fade-up" delay={300}><div class="p-6 bg-primary-dark ...">...</div></AnimateOnScroll>
            <AnimateOnScroll animation="fade-up" delay={400}><div class="p-6 bg-primary-dark ...">...</div></AnimateOnScroll>
        </div>
    </section>

    <AnimateOnScroll animation="fade-up">
        <section class="bg-primary-dark p-10 rounded-lg shadow-2xl text-center">
            </section>
    </AnimateOnScroll>
</Layout>