---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="CE Reinessance - Central European Renovation Company" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title} | CE Reinessance</title>
        
        <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
	</head>
	<body class="min-h-screen flex flex-col">
		<Header />
		<main class="flex-grow max-w-7xl mx-auto w-full px-4 sm:px-6 lg:px-8 py-8 animate-fadeIn">
			<slot />
		</main>
		<Footer />

        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        
        <script is:inline>
            // Initialize AOS with safer settings
            AOS.init({
                duration: 800,
                once: true,
                easing: 'ease-out',
                // CRITICAL FIX: Disable AOS entirely on mobile devices 
                // to prevent rendering conflicts on smaller screens (this is a common fix)
                disable: 'mobile', 
                // Add an offset so the animation is triggered a bit earlier
                offset: 100,
            });
            
            // CRITICAL FIX: Force AOS to recalculate elements after initialization
            // This is essential in Astro environments
            window.addEventListener('load', AOS.refresh);
            window.addEventListener('resize', AOS.refresh);
        </script>
	</body>
</html>